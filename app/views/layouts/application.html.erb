<!DOCTYPE html>
<html>
<head>
  <title>Website</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<link href='http://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic' rel='stylesheet' type='text/css'>
	<link rel="shortcut icon" href="/assets/favicon.png">

	<!-- contact drawer -->
	<script src="/assets/javascripts/collapse.js"></script>
	<script type="text/javascript">
	$(document).ready(function(){
		if(window.location.search.substring(1) == 'add') {
			$('#contact').show();
		} else {
			$('#contact').hide();
		}
 	});
	</script>
</head>
<body>

<section id="contact">
	<div class="container">
		<div id="contact-info">
			<p>matt@justviable.com</p>
			<p>zarin@justviable.com</p>
		</div>
		<div id="contact-form">
			<form>
				<input type="text" class="input" value="Your email..." /><br />
				<textarea class="input">Write us a message</textarea><br />
				<input type="submit" />
			</form>
		</div>
	</div>
</section>

<header>
	<div id="color-stripe"></div>
	<div class="container">
		<nav>
			<ul id="nav-left">
				<li><a href="">About</a></li>
				<li><a href="">Portfolio</a></li>
			</ul>
			<div id="logo"><%=image_tag "logo.png", :alt => "JustViable" %></div>
			<ul id="nav-right">
				<li><a href="#" class="toggle_contact">Contact</a></li>
				<li><a href="/posts">Blog</a></li>
			</ul>
		</nav>
	</div>
</header>

<%= yield %>

<footer>
	<div id="color-stripe"></div>
	<div class="container">
		<script language="JavaScript"> document.write('&copy; ' + (new Date()).getFullYear()); </script> Just Viable
	</div>
</footer>

</body>
</html>
